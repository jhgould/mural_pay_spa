<div class="container-fluid">

  <div class="row">
    <div class="col-lg-4 col-md-5 mb-4">
      <%= render 'dashboards/new_account' %>
    </div>

    <div class="col-lg-8 col-md-7">
      <div class="card">
        <div class="card-header bg-light">
          <h2 class="mb-0">Your Accounts</h2>
        </div>
        
        <div class="card-body" id="accounts-list">
          <%= render partial: "dashboards/account_list", locals: { accounts: @accounts } %>
        </div>
      </div>
    </div>
  </div>
</div>