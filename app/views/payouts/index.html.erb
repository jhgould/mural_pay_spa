<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="list-group">
        <% @payout_request_details.each do |payout| %>
          <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mb-3">
            <div>
              <h5 class="mb-1">Payout ID: <%= payout[:id] %>
              </h5>

              <small class="text-muted">Amount: <%= payout[:payouts][0][:amount][:tokenAmount] %>
                  <%= payout[:payouts][0][:amount][:tokenSymbol] %></small>
            </div>
            <div>
              <span class="badge bg-primary rounded-pill">
                <%= payout[:status] %>
              </span>
              <div class="d-flex gap-2 mt-3">
                <%if payout[:status] != "EXECUTED"  %>
                  <%= button_to "Approve", execute_payout_path(payout[:id]), method: :post, class: "btn btn-outline-primary btn-sm" %>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>