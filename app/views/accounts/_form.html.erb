<%= form_with(url: accounts_path, method: :post, id: "new-account-form", html: { data: { controller: "account-form", action: "turbo:submit-end->account-form#handleSubmit" } }) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name, "Account Name" %>
    <%= form.text_field :name, class: "form-control", required: true, data: { account_form_target: "name" } %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", rows: 3, data: { account_form_target: "description" } %>
  </div>

  <div class="form-feedback my-2" data-account-form-target="feedback"></div>

  <div class="actions">
    <%= form.submit "Create Account", class: "btn btn-primary", data: { disable_with: "Creating..." } %>
    <button type="button" class="btn btn-secondary" data-action="click->account-form#cancel">Cancel</button>
  </div>
<% end %>
